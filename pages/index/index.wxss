/**index.wxss**/
.news-list {
  display: flex;
  flex-direction: column;
  height: auto;
  padding: 40rpx;
}
.title_locati{
  width: 100%;
  height: auto;
}
.cod-list {
  display: flex;
  flex-direction: column;
  padding: 10px;
  height: 50px;
}
.btnUpdateLocation {
  width: 80px;
  float: right;
  margin-top: 10px;
  margin-right: 4px;
}
.result {
  width: 100%;
  height: 50px;
  margin-top: 20px;
}
.btnQuery {
  width: 95%;
  margin-top: 80px;
}
.news-item {
  display: flex;
  flex-direction: row;
  height:200rpx;
  /*width属性解决标题文字太短而导航缩略偏移*/
  width:100%;
}

.news-text {
  display: flex;
  width:100%;
  flex-direction: column;
}

.news-stamp {
    font-size: 25rpx;
    color:darkgray;
    padding: 0 5px;
    display: flex;
    width:100%;
    flex-direction: row;
    overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.news-title {
  margin: 10rpx;
  font-size: 30rpx;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.container {
  height: 5000rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
} 

.list-image {
  width:150rpx;
  height:100rpx;
}

.swiper-image {
	width: 100%;
  flex-direction: row;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
}